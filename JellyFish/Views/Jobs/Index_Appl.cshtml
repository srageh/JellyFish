@model IEnumerable<JellyFish.Models.Job>

@{
	ViewData["Title"] = "Index_Appl";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
			@*	@Html.DisplayNameFor(model => model.JobCategories)*@
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.JobId">View Job Details</a> |
					<a asp-action="Apply" asp-route-id="@item.JobId">Apply</a> 				
				</td>
			</tr>
		}
	</tbody>
</table>
